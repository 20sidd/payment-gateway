<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Add Payment</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script defer src = "/script.js"></script> 

  </head>
  <body>
    <div class="header_div" style="text-align: center; background-color: #0f0f7e; height: 50px; color: white; padding-top: 5px;">
        <h3>
            <a style="text-decoration: none; color: white; font-family: 'Times New Roman', Times, serif;" href="/">
                  Payment Gateway
              </a>
        </h3>
        </div>
        <div style="margin: 25px;">
          <!-- onsubmit="return validateCNIC()" -->
        <form id = "userform" action="/user/add-user" method="post">
        <div style="display: flex;flex-direction: column;background-color: white;width:40%">
            <div style="display: flex; margin-bottom: 15px;">
                <label style="margin-right: 63px;font-weight: bold; font-family: 'Times New Roman', Times, serif ;"for="bankName" f>Bank Name:</label>
                <select name="bankName" id="bankName">
                  <option value="Bank A">Meezan</option>
                  <option value="Bank B">Alfalah</option>
                  <option value="Bank C">Al Habib</option>
                </select>
            </div>
            <div style="display: flex; margin-bottom: 15px;">
                <label style="margin-right: 25px;font-weight: bold; font-family: 'Times New Roman', Times, serif" for="accountNumber">Account Number:</label>
                <input type="text" name="accountNumber" id="accountNumber"required>
            </div>
            <div id = "cnic-form" style="display: flex; margin-bottom: 15px;">
              <label style="margin-right: 103px;font-weight: bold; font-family: 'Times New Roman', Times, serif;" for="cnic">CNIC:</label>
              <input type="text" name="cnic" id="cnic"placeholder = "12345-1234567-1"required>
              <div id="cnic-error" style="display: none; color: red;">Invalid CNIC</div>

            </div>
            <div style="display: flex; margin-bottom: 15px;">
              <label style="margin-right: 87px;font-weight: bold; font-family: 'Times New Roman', Times, serif" for="amount">Amount:</label>
              <input type="text" name="amount" id="amount"required>
            </div>
            <div style="display: flex; margin-bottom: 15px;">
              <label style="margin-right: 103px;font-weight: bold; font-family: 'Times New Roman', Times, serif" for="email">Email:</label>
              <input type="email" name="email" id="email"placeholder = "you@example.com"required>
            </div>
            <div style="display: flex; margin-bottom: 15px;">
              <label style="margin-right: 34px;font-weight: bold; font-family: 'Times New Roman', Times, serif" for="mobileNumber">Mobile Number:</label>
              <input type="text" name="mobileNumber" id="mobileNumber"required>
              <div id="mob-error" style="display: none; color: red;">Length should be 11</div>
            </div>
          </div>
        <button type = "submit" style="background-color:#0f0f7e ; color: white;" >Submit</button>
        </form>
      </div>  
  </body>
</html>